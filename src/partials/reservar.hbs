<div class="cajaMainReservar">

   <div class="reserva">
                <p>Agendar Cita</p>
    </div>

    <div class="cajaSegundaReservar">
        
        <div class="cajaDatosLocalesServicios">

              <div class="locales">
                <label class="labelLocales" for="locales">Locales
                    <select name="locales">
                        <option value="condado" selected>Condado</option>
                        <option value="el-recreo" disabled>El recreo</option>
                    </select>
                </label> 
              </div>

              <div class="serviciosSelect">
                <label for="serviciosSelect">Servicios
                    <select name="servicios">
                        <option value="depilacion" selected>Depilacion</option>
                        <option value="limpieza-facial">Limpieza facial</option>
                    </select>
                </label> 
              </div>

        </div>
        
        

        <div class="cajaDatosHoraFecha">
            <div class="hora">
                <label for="hora">Hora<input id="hora" type="time" name="hora" min="07:59" value="08:00"></label>
            </div>

            <div class="fecha">
                <label for="fecha">Fecha<input id="fecha" type="date" name="fecha" ></label> {{!--  pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}"   (Para editar el orden en el que los datos se guardan) --}}
                <p class="errFecha"></p>
            </div>
        </div>

        
        <div class="material-icons-next" >
                <span class="material-icons next"> keyboard_arrow_right</span>
        </div>
            

        <div class="datosReservaBox">
                {{> datosReserva   }}
        </div>

    </div>



   

</div>



