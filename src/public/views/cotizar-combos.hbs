                        </div>

                        <div class="tab-pane" id="cotizarHombre" role="tabpanel" aria-labelledby="profile-tab">
                          {{> cotizarHombre }}
                        </div>

                        <div class="tab-pane" id="combosCotizar" role="tabpanel" aria-labelledby="contact-tab">
                          {{> combos }}
                        </div>
                    </div>

                </div>

          </section>

      </main>
        
